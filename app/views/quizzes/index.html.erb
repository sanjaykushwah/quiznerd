<div class="well">
  <div class="section-header">
    Quizzes Authored
     <% if @quizzes.size >= 1 %>
      <%= link_to new_quiz_path, class: 'btn btn-primary pull-right btn-sm' do %>
        <i class="icon-plus icon-white"></i>New Quiz
      <% end %>
    <% end %>
    <hr/>
  </div>  
  <div class="table-responsive">
  <table class="table table-bordered table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Published</th>
        <th>Category</th>
        <th>Subject</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @quizzes.each do |quiz| %>
        <tr>
          <td><%= quiz.name %></td>
          <td><%= quiz.description %></td>
          <td><%= quiz.published ? "Yes" : "No" %></td>
          <td><%= quiz.category.name %></td>
          <td><%= quiz.subject.name %></td>
          <td><%= link_to 'Show', quiz %></td>
          <td><%= link_to 'Edit', edit_quiz_path(quiz) %></td>
          <td><%= link_to 'Destroy', quiz, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  </div>


  <%= link_to new_quiz_path, class: 'btn btn-primary pull-right btn-sm' do %>
    <i class='icon-plus icon-white'></i>New Quiz
  <% end %>
  <br/>
  <br/>
</div>
