<div class="well row">
  <div class="col-md-offset-3 col-md-8">  

    <table class="table">
      <tr>
        <td colspan="2"><h3><%= @quiz_event.quiz_name  %></h3></td>
      </tr>
      <tr>
        <td>
          <span class="field-title">Category: </span>
          <%= @quiz_event.category_name %>
        </td>
        <td>
          <span class="field-title">Subject: </span>
          <%= @quiz_event.subject_name %>
        </td>
      </tr>
      <tr>
        <td colspan ="2">
          <span class="field-title">Description: </span>
          <%= @quiz_event.quiz_description %>
        </td>
      </tr>
      <tr>
        <td colspan="2">
          <span class="field-title">Number of Questions: </span>
            <%= @quiz_event.number_of_questions %>
        </td>
      </tr>
    </table>

    <div class="form-actions col-md-offset-4">
      <%= link_to "Take This Quiz", 
          quiz_events_path + "?quiz_id=#{@quiz_event.quiz_id}",  
          method: :post, 
          id: "new_link",
          class: "btn btn-primary btn-sm" 
      %>
      <%= link_to 'Back', :back, 
          class: 'btn btn-primary btn-sm' 
      %>
    </div>
    
  </div>
</div> 
<%= javascript_tag "$('#new_link').focus()" %>