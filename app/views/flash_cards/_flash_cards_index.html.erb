<div class="flash-cards-container">
  <div class="section-header">
    Flash Cards
    <hr/>
  </div>
  <div class="row">
    <%= link_to new_flash_card_path(:deck_id => @deck.id), 
          remote: true,
          id: 'new_link',
          class: 'btn btn-primary pull-left btn-sm' do %>
            <i class="<%= Icon::NEW %>"></i>
            Add Flash Card
    <% end %>
  </div>
  <div id='form-container' class="row">
  </div>
 
  <div class="table-responsive row">
    <table id="flash-cards" class="table table-bordered table-hover">
      <thead>
        <td><span class="field-title">Front</span></td>
        <td><span class="field-title">Back</span></td>
        <td><span class="field-title">Difficulty</span></td>
        <td colspan="1"></td>
        <td colspan="1"></td>
      </thead>
      <tbody id="sortable">
        <%  if @deck.flash_cards.empty? %>
          <tr id="empty-msg">
            <td colspan="5">No flash cards have been added yet.</td>
          </tr>
        <% end %>
        <% @deck.flash_cards.each do |flash_card| %>
          <%= render  partial:'flash_cards/flash_card', 
                    locals:{flash_card: flash_card} 
          %>
        <% end %>
      </tbody>
    </table>
  </div>
  
</div>
<%= javascript_tag "$('#new_link').focus()" %>