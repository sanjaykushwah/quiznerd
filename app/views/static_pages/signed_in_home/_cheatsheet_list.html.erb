<table class="table table-condensed table-striped">
<% @dash.cheatsheets.each do |cheatsheet| %>
  <tr>
    <td>
      <%= link_to cheatsheet.title, cheatsheet_path(cheatsheet), class: "index-link" %>
    </td>
  </tr>
<% end %>  
<% if @dash.remaining_cheatsheets_count > 0 %>
  <tr>
    <td>
      <%= link_to \
            "... and #{@dash.remaining_cheatsheets_count} more", 
            cheatsheets_path, 
            class: "small pull-right" 
      %>
    </td>
  </tr>
<% end %>
</table>
