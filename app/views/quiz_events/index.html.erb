<div class="well">
  <div class="section-header">
    Quizzes Taken
    <hr/>
  </div>  
  <div class="table-responsive">
    <table class="table table-bordered table-striped index-table">
      <thead>
        <tr>
          <th>Quiz</th>
          <th>Category</th>
          <th>Subject</th>
          <th>Score</th>
          <th>Date</th>
          <th colspan="1"></th>
        </tr>
      </thead>
      <tbody>
        <% @quiz_events.each do |quiz_event| %>
          <tr>
            <td><%= link_to quiz_event.quiz.name, quiz_event, 
                      class: "index-link"  %></td>
            <td><%= quiz_event.quiz.category.name  %></td>
            <td><%= quiz_event.quiz.subject.name  %></td>
            <td><%= quiz_event.total_correct %> out of
               <%= quiz_event.total_answered %> 
               (<%= formatted_quiz_score(quiz_event) %>%)</td>
            <td><%= time_ago_in_words(quiz_event.updated_at)%> ago</td>
            <td><%= link_to 'destroy', quiz_event, method: :delete, 
                  data: { confirm: 'Are you sure?' }, class: "index-link"  %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="center"><%= will_paginate @quiz_events, renderer: BootstrapPagination::Rails  %></div>
  <br/>
  <br/>
  <br/>
  <br/>
</div>
